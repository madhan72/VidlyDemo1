@model VidlyDemo.ViewModel.VM_RandomMovie
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customer.Count > 4 ? "popular" : null;
}

<h2 class="popular">@Model.Movie.Name</h2>

@if (Model.Customer.Count == 0)
{
    <text>
        No one has rented this movie before
    </text>
}

else
{
    <ul>
        @foreach (var customer in Model.Customer)
        {
            <li>
                @customer.Name
            </li>
        }
    </ul>
}